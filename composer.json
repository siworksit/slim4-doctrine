{
    "name": "siworks/slim4-doctrine",
    "description": "Simple  implementation of Slim4 with Doctrine",
    "keywords": ["microframework", "slim4", "doctrine", "rest", "router", "psr7"],
    "homepage": "https://github.com/siworksit/slim4-doctrine.git",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "Rafael N. Garbinatto",
            "email": "rafael@siworks.com.br",
            "homepage": "http://www.siworks.com.br/"
        },
        {
            "name": "Diego B. Pimentel",
            "email": "diego@siworks.com.br",
            "homepage": "http://www.siworks.com.br/"
        }
    ],
    "require": {
        "php": "^8.1",
        "slim/slim": "^4.10.0",
        "symfony/validator": "v6.0.0",
        "monolog/monolog": "^3.0.0",
        "doctrine/orm": "^2.12.2",
        "doctrine/common": "^3.3.0",
        "doctrine/cache": "^2.1.1",
        "doctrine/doctrine-bundle": "^2.6.3",
        "doctrine/migrations": "^3.5.1",
        "doctrine/doctrine-migrations-bundle": "^3.2.2",
        "ramsey/uuid": "^4.3.1",
        "ramsey/uuid-doctrine": "^1.8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5.4"
    },
    "autoload": {
        "psr-4": {
            "Siworks\\Slim\\Doctrine\\": "src/Doctrine/",
            "Siworks\\Slim\\Example\\": "src/Example/",
            "Siworks\\Slim\\Tests\\": "tests"
       }
    },
    "autoload-dev": {
        "psr-4": {
            "Siworks\\Slim\\Tests\\": "tests"
        }
    }
}

